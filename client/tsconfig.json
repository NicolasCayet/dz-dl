{
  "compilerOptions": {
    "outDir": "dist",
    "target": "ES5",
    "rootDir": "app",
    "module": "system",
    "moduleResolution": "node",
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "removeComments": false,
    "noImplicitAny": false,
    "listFiles": true
  },
  "exclude": [
    "../node_modules"
  ]
}
